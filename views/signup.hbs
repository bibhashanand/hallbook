<!DOCTYPE html>
<html>

<head>
    <title>Signup page</title>
    <link rel="stylesheet" href="signup.css">
</head>

<body>
    <div class="fullpage">
        <!-- <image src="major project/backgroundimage"></image> -->
        <div class="box">
            <div class="form">
                <h2>Sign up</h2>
                <form action="/auth/signup" method="POST">
                <div class="inputBox">
                    <input type="text" required="required" id="username" name="username">
                    <span>Username</span>
                    <i></i>
                </div>
                <div class="inputBox">
                  <input type="email" required="required" id="email" name="email">
                  <span>Email</span>
                  <i></i>
              
              </div>
                <div class="inputBox">
                    <input type="password" required="required" id="password" name="password">
                    <span>Password</span>
                    <i></i>
                
                </div>

                  <div class="inputBox">
                    <input type="password" required="required" id="confirmpassword" name="confirmpassword">
                    <span>Confirm Password</span>
                    <i></i>
                
                </div>
    
                <div class="links">
                    <!-- <a href="#">Reset</a> -->
                    <a href="../login/login.html">Already have an account!</a>

                </div>
                <div class="submit">
                <input type="submit" value="SIGN UP">
                </div>
                </form>
            </div>
            <!-- <div class="home">
                <a href="index.html">Home Pgae</a>
            </div>
             -->
        </div>

        {{#if message }}
            <h4 class="alert alert-danger mt-4">{{message}}</h4>
        {{/if}}
    </div>
    <script src="signup.js"></script>
</body>

</html>